<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/bibliotecah2</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
        <!-- <mapping class="com.sandra.BibliotecaH2.entidades.Autores"/>
        <mapping class="com.sandra.BibliotecaH2.entidades.Libros"/> -->
        <mapping resource="com/sandra/BibliotecaH2/entidades/Autores.hbm.xml"/>
        <mapping resource="com/sandra/BibliotecaH2/entidades/Libros.hbm.xml"/>
    </session-factory>
</hibernate-configuration>
